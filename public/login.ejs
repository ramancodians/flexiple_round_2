<% include ./partials/head %>
    <div class="flex-box">
        <div class="wrapper">
            <div>
                <img src="imgs/apple.jpg" class="res" alt="">
                <h3 class="logo-text">GreenApple Inc.</h3>
            </div>
            
             
            <div class="login-wrap signin"  <%if(error){ %> style="display:none" <% } %>>
                <h2>Login</h2>
                <form action="/auth" method="post">
                     <div>
                        <label for="full-name">Email</label>
                        <input type="email" name="email" placeholder="Eg. name@domain.in" />
                    </div>
                     <div>
                        <label for="full-name">Password</label>
                        <input type="password" name="password" placeholder="Enter password"/>
                    </div>
                    
                   <%if(loginError){%>
                        <div class="errors" style="text-align:center;">
                            <h5>Invalid username/password</h5>
                        </div>
                   <% } %>
                    <div style="padding-top:30px;">
                         <input type="button" value="Create Account" class="sb" id="open-signup">
                         <input type="submit" value="Login" class="sb">
                    </div>
                </form>
            </div>
            
            <div class="login-wrap sign-up" <%if(error){ %> style="display:block" <% } %>>
                <h2>Create an Account</h2>
                <form action="/" method="post">
                    <div>
                        <label for="full-name">Full Name</label>
                        <input type="text" name="full_name" placeholder="Eg. Alex Smith" required value="<%=body.full_name%>" />
                    </div>
                     <div>
                        <label for="full-name">Email</label>
                        <input type="email" name="email" placeholder="Eg. name@domain.in" required value="<%=body.email%>" />
                    </div>
                     <div>
                        <label for="full-name">Password</label>
                        <input type="password" name="password" placeholder="Enter password" required value="<%=body.password%>"/>
                    </div>
                     <div>
                        <label for="full-name">Confirm Password</label>
                        <input type="password" name="password_confirm" placeholder="Confim Password" required value="<%=body.password_confirm%>" />
                    </div>
                    
                    <%if(error){ %>
                         <div class="errors">
                             <h5>Please check these before submitting</h5>
                           <ul>
                            <%error.map((err)=>{ %>
                                <li><%= err.msg %></li>
                            <% }); %>
                            </ul>
                        </div>
                    <% } %>
                    <div style="padding-top:30px;">
                       <input type="button" value="Cancel" class="sb" id="cancel-signup">
                        <input type="submit" value="Sign Up" class="sb">
                    </div>
                </form>
            </div>
        </div>
    </div>
<% include ./partials/footer %>